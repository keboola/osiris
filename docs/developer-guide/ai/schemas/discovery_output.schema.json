{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://osiris.dev/schemas/discovery_output.schema.json",
  "title": "Osiris Discovery Output Schema",
  "description": "Schema for component discovery mode output",
  "type": "object",
  "required": ["discovered_at", "resources", "fingerprint"],
  "properties": {
    "discovered_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 UTC timestamp of discovery execution",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}\\.[0-9]{3}Z$"
    },
    "connection_fingerprint": {
      "type": "string",
      "description": "SHA-256 fingerprint of connection used",
      "pattern": "^sha256:[a-f0-9]{64}$"
    },
    "resources": {
      "type": "array",
      "description": "List of discovered resources (sorted alphabetically by name)",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Resource name (table, endpoint, collection)"
          },
          "type": {
            "type": "string",
            "enum": ["table", "view", "endpoint", "collection", "stream"],
            "description": "Resource type"
          },
          "schema": {
            "type": "string",
            "description": "Schema/namespace name"
          },
          "estimated_row_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Estimated number of rows/records"
          },
          "estimated_size_mb": {
            "type": "number",
            "minimum": 0,
            "description": "Estimated size in megabytes"
          },
          "fields": {
            "type": "array",
            "description": "Field/column definitions (sorted alphabetically by name)",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "properties": {
                "name": {
                  "type": "string",
                  "description": "Field name"
                },
                "type": {
                  "type": "string",
                  "description": "Data type"
                },
                "nullable": {
                  "type": "boolean",
                  "description": "Whether field can be null"
                },
                "primary_key": {
                  "type": "boolean",
                  "description": "Whether field is primary key"
                },
                "max_length": {
                  "type": "integer",
                  "minimum": 0,
                  "description": "Maximum length for string types"
                },
                "precision": {
                  "type": "integer",
                  "description": "Precision for numeric types"
                },
                "scale": {
                  "type": "integer",
                  "description": "Scale for numeric types"
                }
              }
            }
          }
        }
      }
    },
    "fingerprint": {
      "type": "string",
      "description": "SHA-256 fingerprint of discovery output (excluding this field)",
      "pattern": "^sha256:[a-f0-9]{64}$"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about discovery",
      "properties": {
        "discovery_duration_ms": {
          "type": "number",
          "description": "Time taken for discovery"
        },
        "api_version": {
          "type": "string",
          "description": "API/protocol version used"
        }
      }
    }
  }
}
